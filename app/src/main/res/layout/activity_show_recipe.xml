<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.ShowRecipeActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Receta"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tvRecipeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la receta"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/imgRecipe"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                />
            <!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CategorÃ­a"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tvCategorieRecipe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:text="categoria"
                android:textAlignment="center"
                android:textColor="@color/black"

                />
                -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredientes"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ingredientsFinded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrediente principal"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tvMainIngredient"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:text="ingrediente princiapl"
                android:textAlignment="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instrucciones"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />

            <!-- cambiar a wrap content  en el recycle view de abajo-->
           <!-- <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIngredientSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                /> -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Porciones otenidas"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tvPortions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desea calcular lon ingredientes para mas porciones? entonces preciona el boton"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparar receta"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp">
                <RatingBar
                    android:id="@+id/rbRating"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <EditText
                    android:id="@+id/etReview"
                    app:layout_constraintTop_toBottomOf="@id/rbRating"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:hint="danos tu opinion"
                    android:textColorHint="@color/black"
                    android:background="@drawable/custom_search_bar"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"

                    />
                <Button
                    android:id="@+id/btnAddReview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    android:text="publicar"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCookingSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>